<div id="summaryModal" class="col-sm-3 col-sm-offset-4 col-xs-8 col-xs-offset-2">
	<form role="form">
		<button type="button" class="close close_modal"><span>&times;</span></button>
	    <div class="form-group">
	        <label for="status" class="label-status-text">Daily summary:</label>
	        <textarea id="status-text" name="status" type="text" class="form-control" rows="8" autofocus="true">{{text}}</textarea>
	        <p class="error updates_text_error">Enter a valid Summary!</p>
	    </div>
	    	<div>
				{{#if milestone}}
				<button type="button" class="btn btn-default delete_button">Delete</button>
				<button type="button" class="btn btn-default update_button">Update</button>
				{{else}}
				<button type="button" class="btn btn-default submit_button">Add</button>
				{{/if}}
			</div>
	</form>
</div>