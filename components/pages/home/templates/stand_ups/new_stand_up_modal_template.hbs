<div id="standUpModal" class="col-sm-3 col-sm-offset-4 col-xs-8 col-xs-offset-2">
	<form role="form">
		<button type="button" class="close close_modal"><span>&times;</span></button>
		<div class="form-group">
	        <label for="date">Date:</label>
	        <input id="status-date" name="date" type="text" class="form-control" disabled value="{{noted_at}}" />
	        <p class="error updates_text_error">Enter a valid Date!</p>
	    </div>
	    <div class="form-group">
	        <label for="milestone">Milestone:</label>
	        <select id="milestone-id" name="milstonelist" class="milestone-select col-xs-10">
			</select>
	    </div>
	    <div class="form-group">
	        <label for="status" class="label-status-text">My daily status:</label>
	        <textarea id="status-text"name="status" type="text" class="form-control" rows="8" autofocus="true">{{update_text}}
	        </textarea>
	        <p class="error updates_text_error">Enter a valid Status!</p>
	    </div>
	    	<div>
				{{#if milestone_id}}
				<button type="button" class="btn btn-default delete_button">Delete</button>
				<button type="button" class="btn btn-default update_button">Update</button>
				{{else}}
				<button type="button" class="btn btn-default submit_button">Add</button>
				{{/if}}
			</div>
	</form>
</div>